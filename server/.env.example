# server port
PORT=3001 # Default port on which the server will run. Change if necessary.

# Database configuration
DB_HOST=the_database_host # e.g., localhost or an IP address
DB_USER=the_database_user # e.g., root
DB_PASS=the_database_password
DB_NAME=the_database_name # e.g., stepup_db
DB_PORT=3306 # Default MySQL port, change if necessary

# JWT auth
JWT_SECRET=your_jwt_secret_key # Replace with a secure random key
JWT_EXPIRY=1h # Token expiration time. Adjust as needed (e.g., 1h, 2d, etc.)